<Window x:Name="LoginWindow1" x:Class="StudentInfoSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="passwordBox" Margin="10,114,10,119"></TextBox>
        <TextBox x:Name="usernameBox" Margin="10,40,10,192"></TextBox>
        <Label Content="Username" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="30" Margin="10,92,0,0" VerticalAlignment="Top" Width="80"/>
        <Button x:Name="loginBtn" Content="Login" HorizontalAlignment="Center" Margin="0,225,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.545,0.297" Width="111" Command="{Binding LoginBtnCommand}"/>
    </Grid>
</Window>
