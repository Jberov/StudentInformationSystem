<Window x:Name="LoginWindow1" x:Class="StudentInfoSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="passwordBox" Margin="10,124,10,142"></TextBox>
        <TextBox x:Name="usernameBox" Margin="10,64,10,202"></TextBox>
        <Label Content="Username" HorizontalAlignment="Left" Height="30" Margin="10,29,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="30" Margin="10,87,0,0" VerticalAlignment="Top" Width="80"/>
        <Button Command="{Binding LoginCommand}" CommandParameter="{Binding .}" x:Name="loginBtn" Content="Button" Margin="0,244,0,19"/>
    </Grid>
</Window>
